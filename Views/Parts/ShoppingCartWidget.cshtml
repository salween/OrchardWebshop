@{ 
    Style.Require("Orchard.Webshop.ShoppingCartWidget");

    var itemCount = (int)Model.ItemCount;
    var totalAmount = (decimal)Model.TotalAmount;
}
<article>
    <span class="label">Item:</span> <span class="value">@itemCount</span><br />
    <span class="label">Amount:</span> <span class="value">@totalAmount.ToString("c")</span><br/>
    <div class="group">
        <div class="align right">
            <a href="@Url.Action("Index", "ShoppingCart", new { area = "Orchard.Webshop" })">View shoppingcart</a>
        </div>
    </div>
</article>